{
  "manifest_version": 3,
  "name": "AI Plugin Detector",
  "description": "Detecta si un sitio web tiene un AI Plugin",
  "version": "1.0",
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_title": "AI Plugin Detector",
    "default_icon": {
      "16": "default.png"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.blogger.com/"
  ],
  
  "optional_host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "default.png",
    "48": "default.png",
    "128": "default.png"
  }
}
